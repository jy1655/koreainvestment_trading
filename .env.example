# Korean Investment & Securities API Configuration
# Copy this file to .env and fill in your credentials

# API Credentials (Required)
KIS_APP_KEY=your_app_key_here
KIS_APP_SECRET=your_app_secret_here
KIS_ACCOUNT_NUMBER=your_account_number_here

# Environment Settings
KIS_MOCK_MODE=true  # Set to false for production trading
KIS_TIMEOUT=30
KIS_MAX_RETRIES=3

# WebSocket Settings
KIS_WS_PING_INTERVAL=30
KIS_WS_MAX_RECONNECTS=5
KIS_WS_RECONNECT_DELAY=5
KIS_WS_MESSAGE_TIMEOUT=60

# Trading Configuration
KIS_MAX_POSITION_SIZE=0.1    # Maximum 10% of portfolio per position
KIS_STOP_LOSS_PCT=-0.05      # 5% stop loss
KIS_TAKE_PROFIT_PCT=0.10     # 10% take profit
KIS_MAX_DAILY_LOSS=-0.02     # 2% daily loss limit
KIS_RISK_FREE_RATE=0.03      # 3% annual risk-free rate

# Order Settings
KIS_DEFAULT_ORDER_TYPE=01    # 01: Market, 00: Limit
KIS_MIN_ORDER_AMOUNT=10000   # Minimum order amount in KRW

# Algorithm Settings
KIS_LOOKBACK_PERIOD=20       # Days for technical indicators
KIS_REBALANCE_FREQUENCY=1H   # Rebalancing frequency

# Logging Settings
KIS_LOG_LEVEL=INFO
KIS_LOG_FILE=kis_trading.log
KIS_LOG_MAX_SIZE=10485760    # 10MB
KIS_LOG_BACKUP_COUNT=5

# Database Settings (Optional)
DATABASE_URL=sqlite:///kis_trading.db
DB_ECHO=false